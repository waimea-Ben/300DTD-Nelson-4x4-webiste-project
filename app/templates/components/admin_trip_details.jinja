<h3>{{ trips.name }}</h3>
<p><strong>Location:</strong> {{ trips.location }}</p>
<p><strong>Date:</strong> {{ trips.date }}</p>
<p><strong>Leader:</strong> {{ trips.leader_name }}</p>
<p><strong>Difficulty:</strong> {{ trips.grade }}</p>
<p>{{ trips.description }}</p>

<button 
    hx-get="/trips/{{ trips.id }}/edit"
    hx-target="#trip-{{ trips.id }}"
    hx-swap="innerHTML">
    Edit
</button>

<a role="button" href="/trips/{{ trips.id }}/delete">Delete</a>

{% if trips.is_past %}
    <button 
        hx-get="/trips/{{ trips.id }}/add-photos"
        hx-target="#trip-{{ trips.id }}"
        hx-swap="innerHTML">
        Add photos  
</button>
{% endif %}
