{% extends 'pages/base.jinja' %}

{# -------------------------------------------------------------
   Page Title Block — sets the browser/tab title
------------------------------------------------------------- #}
{% block title %}
    Nelson 4x4 Club
{% endblock %}


{# -------------------------------------------------------------
   Main Content Block — form for adding a new trip
------------------------------------------------------------- #}
{% block content %}
<hr class="header-line">

{# Trip creation form — posts data to /admin/trips/new #}
<form method="post" action="/admin/trips/new" id="trip-form">
    <h2>Add new trip</h2>

    {# Basic trip details #}
    <label>Name:
        <input type="text" name="name" required>
    </label>

    <label>Date:
        <input type="date" name="date" required>
    </label>

    <label>Location:
        <input type="text" name="location" required>
    </label>

    <label>Meeting place:
        <input type="text" name="meeting" required>
    </label>

    {# Trip difficulty selection #}
    <label for="difficulty">Difficulty:</label>
    <select id="difficulty" name="difficulty">
        <option value="Easy">Easy</option>
        <option value="Moderate">Moderate</option>
        <option value="Challenging">Challenging</option>
    </select>

    {# Additional notes #}
    <label>Notes:
        <textarea name="notes" rows="4" cols="50"></textarea>
    </label>

    {# Trip leader selection from existing members #}
    <label for="leader">Leader:</label>
    <select name="leader" id="leader">
        {% for member in members %}
            <option value="{{ member.id }}">{{ member.name }}</option>
        {% endfor %}
    </select>

    {# Submit button #}
    <button type="submit">Add</button>
</form>
{% endblock %}
