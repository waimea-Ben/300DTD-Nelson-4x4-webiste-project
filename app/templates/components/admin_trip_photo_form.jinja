{# ============================================================
   Add Photo Form — allows uploading new photos for a trip
============================================================ #}
<div style="position: relative;">

    {# Close button — reloads trip details view via HTMX PUT #}
    <button 
        style="position: absolute; top: 5px; right: 5px; background: none; border: none; font-size: 1.2em; cursor: pointer;"
        hx-put="/trips/{{ trips.id }}/edit"
        hx-target="#trip-{{ trips.id }}"
        hx-swap="innerHTML"
        aria-label="Close"
    >
        ❌
    </button>

    <h3>{{ trips.name }}</h3>

    {# Form to upload a new photo (multipart for file upload) #}
    <form 
        hx-post="/trips/{{ trips.id }}/add-photos"
        hx-target="#trip-{{ trips.id }}"
        hx-swap="innerHTML"
        enctype="multipart/form-data"
    >
        <label for="photo">Photo:</label>
        <input type="file" name="photo" accept="image/*" required><br><br>

        <label for="credits">Credits:</label>
        <input type="text" name="credits" placeholder="Photo by..." required><br><br>

        <button type="submit">Upload Photo</button>
    </form>
</div>
