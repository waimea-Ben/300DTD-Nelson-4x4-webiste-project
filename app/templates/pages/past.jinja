
{% extends 'pages/base.jinja' %}


{% block title %}

    Past trips

{% endblock %}


{% block content %}

<h1>Past Trips</h1>

    {% for trip in past_trips %}
    <article>
        <header>
            <h2>{{ trip.name }}</h2>
            <p>{{ trip.date }}</p>
            <p>Led by {{ trip.leader_name }}</p>
        </header>

        <p>{{ trip.location }}</p>
        <p>{{ trip.summary }}</p>

        {% if session.member_id %}
            <p>attendees</p>
            <ul>
                {% for attendee in trip.attendees %}
                    <li>{{ attendee.name }}</li>
                {% endfor %}
            </ul>
        {% endif %}


        {% for photo in trip.photos %}
            <div>
                <img src="data:{{ photo.image_type }};base64,{{ photo.image_data | b64encode }}" width="200">
                <small>{{ photo.credits }}</small>
            </div>
        {% endfor %}
    </article>
    {% endfor %}


{% endblock %}

